<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vboxRoot" alignment="CENTER" prefHeight="296.0" prefWidth="540.0" spacing="5.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ee.ivkhkdev.javafxpro1.controller.UserController">
    <Label fx:id="lblInfo" alignment="CENTER" prefHeight="37.0" prefWidth="517.0" text="Привет, мир!" />
    <HBox fx:id="hbFirstname" alignment="CENTER_LEFT">
        <Label fx:id="lblFirstname" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="141.0" text="Имя:">
         <padding>
            <Insets right="10.0" />
         </padding></Label>
        <TextField fx:id="tfFirstname" prefHeight="25.0" prefWidth="351.0" />
    </HBox>
    <HBox fx:id="hbLastname" alignment="CENTER_LEFT">
        <Label fx:id="lblLastname" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="141.0" text="Фамилия:">
         <padding>
            <Insets right="10.0" />
         </padding></Label>
        <TextField fx:id="tfLastname" prefHeight="25.0" prefWidth="349.0" />
    </HBox>
    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="511.0">
        <Button fx:id="btnAddElement" onAction="#addElement" text="Добавить элемент" />
        <Button fx:id="btnDeleteElement" onAction="#deleteElement" text="Удалить элемент" />
    </HBox>
   <ListView fx:id="lvListUsers" prefHeight="200.0" prefWidth="200.0" />
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
